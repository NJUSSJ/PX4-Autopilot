param set-default MC_PITCH_P 1
param set-default MC_PITCHRATE_P 1
param set-default MC_PITCHRATE_I 0.001
param set-default MC_PITCHRATE_D 0.001
param set-default MC_PITCHRATE_FF 0


param set-default MC_ROLL_P 1
param set-default MC_ROLLRATE_P 0.65
param set-default MC_ROLLRATE_I 0.001
param set-default MC_ROLLRATE_D 0.001
param set-default MC_ROLLRATE_FF 0

param set-default MC_YAW_P 1
param set-default MC_YAWRATE_P 0.65
param set-default MC_YAWRATE_I 0.001
param set-default MC_YAWRATE_D 0.001
param set-default MC_YAWRATE_FF 0


param set-default NAV_ACC_RAD 5
param set-default NAV_LOITER_RAD 80

